                                    style="?android:attr/borderlessButtonStyle"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/back_btns"></Button>
                            </RelativeLayout>

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_minus" />
                        </RelativeLayout>

                        <FrameLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/numberJ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_back"
                            android:gravity="center"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <FrameLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:id="@+id/plusJ"
                                    style="?android:attr/borderlessButtonStyle"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/back_btns"></Button>
                            </RelativeLayout>

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_plus" />
                        </RelativeLayout>


                    </LinearLayout>


                    <Button
                        android:id="@+id/btnagregarJ"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/boton"
                        android:drawableStart="@drawable/agregar"
                        android:fontFamily="@font/asap_semibold"
                        android:paddingStart="5dp"
                        android:shadowColor="#070606"
                        android:text="Agregar al Carrito"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@+id/QuantityJ"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/QuantityJ"
                        app:layout_constraintTop_toBottomOf="@+id/textPrecioJ">

                    </Button>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>