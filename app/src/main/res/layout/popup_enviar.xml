<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="600dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/regresar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/leftarrow"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorPrimary" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/perfiluser" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="BIENVENIDO(A) "
            android:gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:hint="Nombre"
            android:gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/apellido"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:hint="apellido"
            android:gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewe"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/quicksand_bold"
        android:text=" AL SUPERMERCADO EL ECONOMICO "
        android:textColor="@color/black" />
    <Button
        android:id="@+id/modi"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/asap_semibold"
        android:textColor="@color/colorWhite"
        android:drawableStart="@drawable/agregarfoto"
        android:paddingStart="50dp"
        android:paddingEnd="40dp"
        android:text="Agregar Foto"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18dp"
        android:textStyle="bold"
        app:iconGravity="textStart" />

    <Button
        android:id="@+id/ubicacion"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/asap_semibold"
        android:textColor="@color/colorWhite"
        android:drawableStart="@drawable/ubicacion"
        android:paddingStart="50dp"
        android:paddingEnd="40dp"
        android:text="UbicaciÃ³n"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18dp"
        android:textStyle="bold"
        app:iconGravity="textStart" />
    <Button
        android:id="@+id/cerrarS"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/asap_semibold"
        android:textColor="@color/colorWhite"
        android:drawableStart="@drawable/cerrar"
        android:paddingStart="50dp"
        android:paddingEnd="40dp"
        android:text="Cerrar Sesion"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18dp"
        android:textStyle="bold"
        app:iconGravity="textStart" />
</LinearLayout>